server {
    listen 80;
    server_name ifaist.com www.ifaist.com xn--80aq1aeg.xn--p1ai www.xn--80aq1aeg.xn--p1ai;
    root "/var/www/website";

    index index.html;

    charset utf-8;

    location / {
        try_files $uri $uri/ /index.html?$query_string;
    }

    access_log off;
    error_log  /var/log/nginx/website-error.log;

    client_max_body_size 100m;

    location ~ /\.ht {
        deny all;
    }

}
